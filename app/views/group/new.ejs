<% include ../includes/head.ejs %>
<% include ../includes/header.ejs %>

<div class="page-header">
	<h1> Looking for Group </h1>
</div>
<form class="form-horizontal" role="form" method="post" action="/group/new")>
	<div class="form-group">
		<label class="col-lg-2 control-label" for="name"> Who are you looking for: </label>
		<div class="col-lg-6">
			<input class="form-control" type="text"  id="name"  name="name"  placeholder="Looking for..." />
		</div>
	</div>
	<div class="form-group">
		<label class="col-lg-2 control-label" for="size"> How many ppl are you looking for: </label>
		<div class="col-lg-6">
			<input class="form-control" type="number" id="size" name="size" placeholder="5" />
		</div>
	</div>
	<div class="form-group">
		<label class="col-lg-2 control-label" for="nick"> Your in-game nick: </label>
		<div class="col-lg-6">
			<input class="form-control" type="text" id="nick" name="nick" placeholder="Nick" />
		</div>
	</div>
	<div class="form-group">
		<label class="col-lg-2 control-label" for="desc"> Description: </label>
		<div class="col-lg-6">
			<textarea class="form-control" type="text"  id="desc"  name="desc"  placeholder="Description" rows=15 ></textarea>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-6">
			<button class="btn btn-default" type="submit"> Save </button>
		</div>
	</div>
</form>

