<% include ../includes/head.ejs %>
<% include ../includes/header.ejs %>
<div class="row" ng-app="GroupModule" ng-controller="GroupController">
	<div class="col-lg-8">
		<div class="page-header">
			<h1> <%= group.name %> </h1>
		</div>
	</div>
	<div class="col-lg-4">
		<div class="panel panel-info">
			<div class="panel-heading">
				<div class="row">
					<div class="col-lg-10 col-xs-8">
						<div class="panel-title">
							<h5> Party </h5>
						</div>
					</div>
					<div class="col-lg-2 col-xs-4">
                    <button class="dropdown-toggle" href="#" data-toggle="dropdown"> Dropdown <b class="caret"></b></button>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="#"> Action </a>
                        </li>
                        <li>
							<input type="text" />
                        </li>
                    </ul>
                
					</div>
				</div>
			</div>
			<div class="panel-body">
				<div class="row">
					<div class="col-lg-6">
						Nick
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-8">
		<div class="well">
			Description here
		</div>
	</div>
	<div class="col-lg-8">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<div class="panel-title"> Chat </div>
			</div>
			<div class="panel-body">
				<div class="row chat-room" scroll-glue>
					<div class="col-lg-12" ng-repeat="msg in messages">
						<b> {{msg.user}}: </b> {{msg.message}}
					</div>
				</div>
			</div>
			<div class="panel-footer">
				<div class="row">
					<form ng-submit="sendMessage()">
						<div class="col-lg-10 col-sm-10">
							<input class="form-control" type="text" ng-model="message" placeholder="Chat here" />
						</div>
						<div class="col-lg-2 col-sm-2">
							<button class="btn btn-default btn-block" type="submit"> Send </button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

<% include ../includes/foot.ejs %>

<script src='/socket.io/socket.io.js'></script>
<script src='/js/services/chatService.js'></script>
<script src='/js/controllers/groupController.js'></script>
<script src='/js/app.js'> </script>
<script src='https://rawgithub.com/Luegg/angularjs-scroll-glue/master/src/scrollglue.js'></script>
<script>
$(document).ready(function() {
  // Fix input element click problem
  $('.dropdown-menu input, .dropdown-menu label').click(function(e) {
    e.stopPropagation();
  });
});
</script>
