extends ../layouts/default

block main	
	.row.page-header
		.col-lg-10
			h1 Looking for Group
		.col-lg-2
			a.btn.btn-danger.btn-lg(href="/group/new") 
				span.glyphicon.glyphicon-plus
				| Create new		
	each group in groups
		.row
			.col-lg-4 
				a(href="/group/details/" + group.id) #{group.name}
			.col-lg-4.col-xs-6
				a(href="/user/profile/"+group.owner.id) by #{group.nick}
			.col-lg-2.col-xs-6 #{group.party.length} / #{group.size}				
