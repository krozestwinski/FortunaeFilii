extends ../layouts/default

block main	
	.page-header
		h1 Looking for Group
	form.form-horizontal(role="form", method="post", action="/group/new")
		.form-group
			label.col-lg-2.control-label(for="name") Who are you looking for:
			.col-lg-6
				input.form-control(type="text", id="name", name="name", placeholder="Looking for...")
		.form-group
			label.col-lg-2.control-label(for="size") How many ppl are you looking for:
			.col-lg-6
				input.form-control(type="number", id="size", name="size", placeholder="5")
		.form-group
			label.col-lg-2.control-label(for="nick") Your in-game nick:
			.col-lg-6
				input.form-control(type="text", id="nick", name="nick", placeholder="Nick")
		.form-group
			label.col-lg-2.control-label(for="desc") Description:
			.col-lg-6
				textarea.form-control(type="text", id="desc", name="desc", placeholder="Description", rows=15)
		.form-group
			.col-lg-offset-2.col-lg-6
				button.btn.btn-default(type="submit") Save
