<% include ../includes/head.ejs %>
<% include ../includes/header.ejs %>
<div class="page-header">
	<h1><%= profile.name %></h1>
	<div class="row">
		<div class="col-lg-2">
			<img class="img-thumbnail img-responsive" src="<%= profile.picture || 'https://ssl.gstatic.com/s2/profiles/images/silhouette120.png' %>" />
		</div>
		<div class="col-lg-10">
			<div class="row">
				<span class="col-lg-2"> Name: </span>
				<span class="col-lg-10"><%= profile.name %> </span>
			</div>
			<div class="row">
				<span class="col-lg-2"> Email: </span>
				<span class="col-lg-10"> <a href="mailto:<%= profile.email %>"> <%= profile.email %> </a></span>
			</div>
			<div class="row">
				<span class="col-lg-2"> Birthday: </span>
				<span class="col-lg-10"> <%= profile.birthday || 'Not entered' %> </span>
			</div>
		</div>
	</div>
</div>
<% include ../includes/foot.ejs %>
